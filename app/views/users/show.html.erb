<div class='row'>
  <div class='col-lg-12'>
    <h2><% if session[:user_id] == @user.id %>
          <%= 'you are logged in as: '%>
        <% end %> <%= @user.username %></h2>

    <h3><% if @user == current_user %>
      <%= link_to 'Upload a New Patch', new_user_patch_path(@user)  %>
      <% end %></h3>

    <h3><%= 'PATCHES:' if @user.patches.first != nil %></h3>

    <ul><% @user.patches.each do |p| %>
          <li><%= link_to p.name, user_patch_path(@user, p) %></li>
        <% end %></ul>
  </div>
</div>
