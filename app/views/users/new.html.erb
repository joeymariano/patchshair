<div class='row'>
  <div class='col-lg-12'>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <label for="username">Username:</label>
        <%= f.text_field :username, class: 'form-control', type: 'username' %>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <%= f.password_field :password, class: 'form-control', type: 'password' %>
      </div>
      <div class="form-group">
        <label for="passwordConfirmation">Password Confirmation:</label>
        <%= f.password_field :password_confirmation, class: 'form-control', type: 'password' %>
      </div>
      <%= f.submit 'Create User', class: 'btn btn-dark'%>
    <% end %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %>
            prohibited this user from being saved:
          </h2>

          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
</div>
