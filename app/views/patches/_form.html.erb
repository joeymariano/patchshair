<%= form_for(patch, url: target_url) do |f| %>
  <div class="form-group">
    <!-- <label class="btn btn-dark"> -->
    <%= f.file_field :file, class: 'form-control-file', type: 'file'%>
    <!-- </label> -->
  </div>
  <div class="form-group">
    <%= f.text_field :name, :value => patch.name, class: 'form-control', placeholder: "Patch Name"%>
  </div>

  <div class="form-group">
    <%= f.text_field :description, class: 'form-control', placeholder: "Description" %>
  </div>

  <div class="form-group">
    <%= f.text_field :game, class: 'form-control', placeholder: "If from a game, which one?" %>
  </div>

  <div class="form-group">
    <%= f.fields_for( :category) do |c| %>
        <%= c.text_field :name, class: 'form-control', placeholder: "New Category?" %>
    <% end %>
  </div>

  <div class="form-group">
    Original?: &nbsp; <%= f.check_box :original %>
  </div>

  <div class="form-group">
    Category:   <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
                &nbsp;&nbsp;<%= b.label class:"label-checkbox" do%>
                  <%=b.check_box + ' ' + b.text%><% end %>
                <% end %>
  </div>


  <%= f.submit message, class: 'btn btn-dark'  %>
<% end %>
